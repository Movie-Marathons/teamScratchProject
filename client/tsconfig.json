{
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"] },
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src", "**/*.test.ts", "**/*.test.tsx", "**/*.d.ts"]
}
