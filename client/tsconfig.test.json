{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    // IMPORTANT: allow ESM-style imports in tests
    "verbatimModuleSyntax": false,

    // make Jest types available
    "types": ["jest", "node"],
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
